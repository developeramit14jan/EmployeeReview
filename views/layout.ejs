<html>

<head>
    <title>
        <%= title%>
    </title>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css" />
    <script rel="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    <link rel="stylesheet" href="/css/layout.css">
</head>

<body>

    <%- body %>
        <script>
           <% if (flash.success && flash.success.length > 0) {%>
                new Noty({
                    then: 'relax',
                    text: "<%= flash.success %>",
                    type: 'success',
                    layout: 'topRight',
                    timeout: 1500
                }).show()
                <% } %>
                <% if (flash.error && flash.error.length > 0) {%>
                new Noty({
                    then: 'relax',
                    text: "<%= flash.error %>",
                    type: 'error',
                    layout: 'topRight',
                    timeout: 1500
                }).show()
                <% } %>
        </script>

</body>

</html>